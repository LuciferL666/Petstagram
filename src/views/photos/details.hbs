<!-- Starts Main Section -->
    <main>
        <div class="container">
            <div class="col-9">

                <!-- Start Pet Photo Post Section -->
                <div class="card">
                    <div class="top">

                        <!-- Start User Details and Image Location Section -->
                        <div class="userDetails">

                            <!-- Link to User Profile Details Page-->
                            <div>
                                <div class="profilepic">
                                    <div class="profile_img">
                                        <div class="image">
                                            <img src="/images/person.png" alt="img8">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <h3>

                                <!-- Link to User Profile Details Page -->
                                <p>
                                    <!-- User's username -->
                                    {{photo.owner.username}}<!--31. B -->
                                </p>
                                <!-- photo's location -->
                                <span>{{photo.location}}</span><!--31. B -->

                                <!-- IF the viewer is the creator of the photo -->
                                {{#if isOwner}}
                                <div class="edit-delete-btns">

                                    <!-- Edit Pet Photo -->
                                    <a href="/photos/{{photo._id}}/edit"> <!-- 33. A -->
                                        <img class="edit-img" src="/images/edit-pen-icon-6.jpg"
                                            alt="edit button">
                                    </a>

                                    <!--Delete Pet Photo -->
                                    <a href="/photos/{{photo._id}}/delete"> <!-- 32. A, THE IN PHOTOCONTROLLER.JS -->
                                        <img class="bin-img" src="/images/icon-remove-22.jpg" alt="bin button">
                                    </a>
                                </div>
                                {{/if}}

                            </h3>
                        </div>

                    </div>

                    <!-- Start Pet Photo -->
                    <div class="imgBx">
                        <!-- Pet Photo -->
                        <img src="{{photo.image}}" alt="{{photo.name}}" class="cover"> <!--31. B -->
                    </div>



                    <div class="bottom">

                        <p class="message">
                            <b class="petDescription">{{photo.description}}</b>
                        </p>


                        <!-- Photo description -->
                        <div class="pet-details">
                            <p class="petName">Name: {{photo.name}}</p>
                            <p class="petAge">Age: {{photo.age}}</p>
                        </div>
                        <div class="comments">
                            <div class="comments-top">
                               {{#each photo.comments}} <!--34. B-->
                               {{>comment}} <!--34. B-->
                               {{/each}} <!--34. B-->
                            </div>
                        </div>
                    </div>
                    {{#if isAuthenticated}} <!-- 31. C -->
                    {{#unless isOwner}} <!-- 31. C -->
                    <div class="addComments">
                        <!-- Start Add Comments Form -->
                        <form method="POST" action="/photos/{{photo._id}}/comments"> <!-- 34. A -->
                            <textarea id="comment-textarea" name="message" cols="40" rows="10"
                                placeholder="Add comment..."></textarea>
                            <!-- Post Comments Button -->
                            <button type="submit">Post</button>
                        </form>
                    </div>
                    {{/unless}} <!-- 31. C -->
                    {{/if}}  <!-- 31. C -->
                </div>
            </div>
        </div>
    </main>